@model Patient

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary">Add New Patient</h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="PatientName"></label>
            <input asp-for="PatientName" type="text" class="form-control" />
            <span asp-validation-for="PatientName" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="PatientOld"></label>
            <input asp-for="PatientOld" type="number" class="form-control" />
            <span asp-validation-for="PatientOld" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="Hight"></label>
            <input asp-for="Hight" type="number" class="form-control" />
            <span asp-validation-for="Hight" class="text-danger"></span>
        </div>


        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="Weight"></label>
            <input asp-for="Weight" type="number" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>


        <div class="row">
            <div class="col-6 text-start col-lg-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 text-end col-lg-6 col-md-3">
                <a asp-controller="patients" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back To list
                </a>
            </div>
        </div>


    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}